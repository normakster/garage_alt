FROM alpine:edge

LABEL APP="mongodb"
LABEL APP_VERSION="3.4.10-r0"
LABEL APP_REPOSITORY="https://pkgs.alpinelinux.org/package/edge/community/x86_64/mongodb"


RUN apk add su-exec
RUN apk add --no-cache mongodb
RUN mkdir -p /data/db

WORKDIR /scripts

COPY ./scripts/start.sh start.sh
RUN chmod +x start.sh

VOLUME [ "/data/db" ]

EXPOSE 27017
